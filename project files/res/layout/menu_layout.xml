<?xml version="1.0" encoding="utf-8"?>
<fragment xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#444444" >
   
    <RelativeLayout 
       android:id="@+id/options_menu_layout"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" >
    
       <ImageButton
           android:id="@+id/fullscreenButton"
           android:layout_alignParentRight="true"
           android:layout_alignParentTop="true"
           android:layout_width="40dp"
           android:layout_height="40dp"
           android:layout_gravity="center_horizontal"
           android:layout_marginTop="0dp"
           android:background="@null"
           android:scaleType="fitCenter"
           android:src="@drawable/fullscreen_icon" />
      
       <TextView 
           android:id="@+id/menu_title_text"
           android:layout_alignParentLeft="true"
           android:layout_alignParentTop="true"
           android:layout_marginTop="0dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:gravity="center_vertical"
           android:padding="10dp"
           android:textSize="24dp"
           android:textAppearance="@android:style/TextAppearance.Medium"
           android:text="Polyviewer" />
       "
    </RelativeLayout>
    
      <LinearLayout
         android:id="@+id/menu_list_layout"
         android:layout_width="match_parent"
         android:layout_height="fill_parent"
         android:orientation="vertical"
         android:background="#00000000" >
         
         <LinearLayout
            android:id="@+id/fileload_menu_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal" >
         
            <ImageView
               android:id="@+id/load_icon"
               android:layout_width="50dp"
               android:layout_height="50dp"
               android:padding="10dp"
               android:src="@drawable/folder" />
            
            <TextView
               android:id="@+id/row_title"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:gravity="center_vertical"
               android:padding="10dp"
               android:text="Load Model"
               android:textSize="16dp"
               android:textAppearance="@android:style/TextAppearance.Medium" />
         
         </LinearLayout>
         
         <LinearLayout
            android:id="@+id/camera_menu_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal" >
         
            <ImageView
               android:id="@+id/camera_menu_icon"
               android:layout_width="50dp"
               android:layout_height="50dp"
               android:padding="10dp"
               android:src="@drawable/camera" />
            
            <TextView
               android:id="@+id/camera_preset_text"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:gravity="center_vertical"
               android:padding="10dp"
               android:text="Camera Presets"
               android:textSize="16dp"
               android:textAppearance="@android:style/TextAppearance.Medium" />
         
         </LinearLayout>
         
         <LinearLayout
            android:id="@+id/light_menu_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal" >
         
            <ImageView
               android:id="@+id/light_menu_icon"
               android:layout_width="50dp"
               android:layout_height="50dp"
               android:padding="10dp"
               android:src="@drawable/lights" />
            
            <TextView
               android:id="@+id/light_preset_text"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:gravity="center_vertical"
               android:padding="10dp"
               android:text="Light Presets"
               android:textSize="16dp"
               android:textAppearance="@android:style/TextAppearance.Medium" />
         
         </LinearLayout>
         
         <LinearLayout
            android:id="@+id/settings_menu_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal" >
         
            <ImageView
               android:id="@+id/options_icon"
               android:layout_width="50dp"
               android:layout_height="50dp"
               android:padding="10dp"
               android:src="@drawable/settings_icon" />
            
            <TextView
               android:id="@+id/menu_settings_text"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:gravity="center_vertical"
               android:padding="10dp"
               android:text="Settings"
               android:textSize="16dp"
               android:textAppearance="@android:style/TextAppearance.Medium" />
         
         </LinearLayout>
         
      </LinearLayout>
      
</fragment>