<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fusedresistance.polyviewer.pro"
    android:versionCode="8"
    android:versionName="2.0" 
    android:installLocation="auto" >	
    
    <uses-sdk android:minSdkVersion="8" />
    
    <uses-feature android:glEsVersion="0x00020000" android:required="true" />
    
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/polyviewer_icon"
        android:label="@string/app_name" >

        <activity
            android:label="@string/app_name"
            android:name=".PolyviewerActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <service
            android:label="Polyviewer Pro Live Wallpaper"
            android:name=".wallpaper.LiveWallpaper"
            android:permission="android.permission.BIND_WALLPAPER">
            <intent-filter>
                <action android:name="android.service.wallpaper.WallpaperService" />
            </intent-filter>
            <meta-data android:name="android.service.wallpaper" android:resource="@xml/polyviewer" />
        </service>
        
        <activity
            android:label="WallpaperSettings"
            android:configChanges="orientation"
            android:name=".wallpaper.WallpaperSettings" />

        <activity
            android:label="HelpActivity"
            android:name=".HelpActivity" />
        
        <activity
            android:label="SettingsActivity"
            android:name=".SettingsActivity" />
        
        <activity
            android:label="Options"
            android:name="com.fusedresistance.polyviewer.settings.PolyviewerOptions" />
                
    </application>

</manifest>